{
  "clearMocks": true,
  "collectCoverage": true,
  "collectCoverageFrom": ["src/**/*.{ts,tsx}", "!src/index.tsx", "!src/routes/routes.tsx"],
  "coverageDirectory": "coverage",
  "coverageThreshold": {
    "global": {
      "statements": 20,
      "branches": 20,
      "functions": 20,
      "lines": 20
    }
  },
  "moduleDirectories": ["node_modules", "src"],
  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif|eot|otf|webp|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|pdf|css|less|scss|sss|styl)$": "jest-transform-stub",
    "^.+\\.svg$": "jest-svg-transformer"
  },
  "testEnvironment": "jsdom"
}
