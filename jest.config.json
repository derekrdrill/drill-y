{
  "clearMocks": true,
  "collectCoverage": true,
  "collectCoverageFrom": [
    "components/**/*.{ts,tsx}",
    "context/**/*.{ts,tsx}",
    "pages/**/*.{ts,tsx}"
  ],
  "coverageDirectory": "coverage",
  "coverageThreshold": {
    "global": {
      "statements": 60,
      "branches": 50,
      "functions": 51,
      "lines": 61
    }
  },
  "moduleDirectories": ["node_modules", "src"],
  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif|eot|otf|webp|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|pdf|css|less|scss|sss|styl)$": "jest-transform-stub",
    "^.+\\.svg$": "jest-svg-transformer"
  },
  "testEnvironment": "jsdom"
}
